  <!-- Script para el contador -->
  <script>
    let contador = 0;

    function actualizarContador() {
      contador++;
      document.getElementById('contador').textContent = contador;
    }

    setInterval(actualizarContador, 1000);
  </script>

  <!-- Script para cambiar canción -->
  <script>
    function cambiarCancion() {
      const seleccion = document.getElementById('apodo').value;
      const iframe = document.getElementById('video-iframe');

      const canciones = {
        "lapa": "https://www.youtube.com/embed/WmF4vJ8_kFg?autoplay=1",
        "apaleado": "https://www.youtube.com/embed/P2rUr8xy-9I?autoplay=1",
        "vbse": "https://www.youtube.com/embed/QGTpPfaDEbw?autoplay=1",
        "hitly": "https://www.youtube.com/embed/TnTfFWwf44U?autoplay=1",
        "bigfoot": "https://www.youtube.com/embed/SI4CScs4D2Q?autoplay=1",
        "bubu": "https://www.youtube.com/embed/pK3c8DA9pkI?autoplay=1", // NUEVO
        "default": "https://www.youtube.com/embed/Kts_f8Oljgw"
      };

      iframe.src = canciones[seleccion] || canciones["default"];
    }
  </script>

